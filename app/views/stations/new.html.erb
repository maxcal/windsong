<%= simple_form_for(@station, url: stations_path ) do |form| %>

    <%= form.error_notification %>

    <div class="form-inputs">
      <%= form.input :name, required: true, autofocus: true %>
      <%= form.input :hardware_uid, required: true %>
    </div>

    <div class="form-actions">
      <%= form.button :submit, "Create" %>
    </div>


<% end %>