<%= simple_form_for(station, url: url ) do |form| %>

    <%= form.error_notification %>

    <div class="form-inputs">
      <%= form.input :name, required: true, autofocus: true %>
      <%= form.input :hardware_uid, required: true %>
      <%= form.input :custom_slug, label: 'Slug' %>
    </div>

    <div class="form-actions">
      <%= form.button :submit, action_name == 'new' ? "Create" : "Update" %>
    </div>

<% end %>